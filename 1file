n = int(input("Введите количество повторений: "))
count = 0
while count < n:
	print("for - частный случай цикла while")
	count +=1
	


number = int(input("Введите целое число: "))
sum = 0
while number != 0:
	sum += number % 10
	number //= 10
print("sum")